@model BugTracker.Models.Ticket
@{
    ViewBag.Title = "Assign Ticket";
}

@using (Html.BeginForm("AssignTicket", "Tickets", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row clearfix">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        ASSIGN TICKET TO DEVELOPER
                    </h2>

                </div>
                <div class="body table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="danger">

                                <th>
                                    @Html.DisplayName("Assign Developer")
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td>@Html.DropDownList("AssignedToUserId", null, new { @class = "form-control" })</td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>




    </div>
    <div class="row form-group">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn bg-teal" />
        </div>
    </div>
}

@Html.ActionLink("Back to List", "myIndex")

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}