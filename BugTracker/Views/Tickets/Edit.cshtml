@model BugTracker.Models.Ticket

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            EDIT TICKET

                        </h2>
                        <div class="body table-responsive">
                            <table class=" table table-condensed">
                                <thead>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Title")
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Description")
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Created")
                                            @Html.EditorFor(model => model.Created, new { htmlAttributes = new { @class = "form-control" } })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Updated")
                                            @Html.EditorFor(model => model.Updated, new { htmlAttributes = new { @class = "form-control" } })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Project")
                                            @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Ticket Type")
                                            @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Ticket Status")
                                            @Html.DropDownList("TicketStatusId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("Ticket Priority")
                                            @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("OwnerUserId")
                                            @Html.DropDownList("OwnerUserId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>
                                    <tr class="danger">
                                        <th>
                                            @Html.DisplayName("AssignedToUserId")
                                            @Html.DropDownList("AssignedToUserId", null, htmlAttributes: new { @class = "form-control" })

                                        </th>

                                    </tr>

                                </thead>
                            </table>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>




<div class="row form-group">
    <div class="col-md-12">
        <input type="submit" value="Edit" class="btn bg-teal" />
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "myIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


