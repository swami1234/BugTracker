@using BugTracker.ViewModels
@using BugTracker.Helper

@model IEnumerable<UserProfileViewModel>

@{
                /**/

                /**/

                ViewBag.Title = "ManageRoles";
                var roleHelper = new UserRolesHelper();
                var projectHelper = new ProjectsHelper();
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    MANAGE ROLES FOR MULTIPLE USERS
                    <small>Make necessary changes to user role and save.</small>
                </h2>
                </br>
                </br>
                <div class="body table-responsive">
                    <table class=" table table-condensed">
                        <thead>
                            <tr class="danger">

                                <th>
                                    @Html.DisplayName("SELECT USER")
                                </th>
                                <th>
                                    @Html.DisplayName("SELECT ROLE")
                                </th>
                                <th>
                                    @Html.DisplayName("ASSIGN")
                                </th>
                            </tr>
                        </thead> 
                    </div>
                </div>
                        
                        @using (Html.BeginForm())
                        {
                            <div class="body table-responsive">
                                <table class=" table table-condensed">

                                    <tbody>
                                        <div class=" row">
                                            <div class="col-md-5">

                                                @Html.ListBox("Users", null, htmlAttributes: new { @class = "form-control" })
                                            </div>
                                            <div class="col-md-3">
                                                @Html.DropDownList("RoleName", null, "-- Select Role --", htmlAttributes: new { @class = "form-control" })
                                            </div>
                                            <div class="col-md-4">
                                                <input type="submit" value="Assign" class="btn bg-teal" />
                                            </div>
                                        </div>

                                    </tbody>
                                </table>
                            </div>


                        }
                </div>
                <div class="body table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="danger">
                                <th>#</th>
                                <th>
                                    @Html.DisplayName("Full Name")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayName("Role")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>
                                        @user.LastName, @user.FirstName
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.Email)
                                    </td>
                                    <td>
                                        @roleHelper.ListUserRoles(user.Id).FirstOrDefault()
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>

<br />
@Html.ActionLink("Back To Dashboard", "Dashboard", "Home")

